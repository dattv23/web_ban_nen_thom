@model List<WebTiemThom.Models.CartItem>
@{
    long totalAmount = 0;
}
<div class="sinlge-bar shopping">
    <a href="#" class="single-icon"><i class="ti-bag"></i> <span class="total-count">@Model.Count</span></a>
    <!-- Shopping Item -->
    <div class="shopping-item">
        <div class="dropdown-cart-header">
            <span>@Model.Count Items</span>
            <a href="/cart">View Cart</a>
        </div>
        <ul class="shopping-list">
            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
                <li>
                    @*<a href="#" class="remove" title="Remove this item"><i class="fa fa-remove"></i></a>*@
                    <a class="cart-img" href="#"><img src="@item.Product.image" width="70" height="70" alt="#"></a>
                    <h4><a href="#">@item.Product.name</a></h4>
                    <p class="quantity">@{@item.Quantity}x - <span class="amount">@item.Product.price vnđ</span></p>
                    @{ totalAmount += ((long)item.Product.price.GetValueOrDefault(0) * item.Quantity); }
                    @{count += 1;}
                    @if(count == 3) {
                        <a href="/cart">View all</a>
                        break;
                    }
                </li>
            }
        </ul>
        <div class="bottom">
            <div class="total">
                <span>Total</span>
                <span class="total-amount">@totalAmount vnđ</span>
            </div>
            <a href="checkout.html" class="btn animate">Checkout</a>
        </div>
    </div>
    <!--/ End Shopping Item -->
</div>

